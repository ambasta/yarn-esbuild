{
  "name": "@ambasta/yarn-esbuild",
  "packageManager": "yarn@3.1.1",
  "main": "./dist/src/main.js",
  "bin": {
    "esbuild": "./dist/src/bin/yarn-esbuild"
  },
  "exports": {
    "./*": "./dist/src/*"
  },
  "typesVersions": {
    "*": {
      "*": {
        "*": [
          "dist/src/*"
        ]
      }
    }
  },
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean && tsc",
    "watch": "yarn clean && tsc --watch",
    "lint": "yarn eslint",
    "invoke": "yarn build && node dist/src/bin/yarn-esbuild"
  },
  "dependencies": {
    "@yarnpkg/esbuild-plugin-pnp": "^2.0.1-rc.2",
    "colorette": "^2.0.16",
    "compare-versions": "^4.1.3",
    "esbuild": "^0.14.18",
    "fs-extra": "^10.0.0",
    "pino": "^7.6.5",
    "pino-pretty": "^7.5.1",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@angular-eslint/eslint-plugin": "^13.0.1",
    "@angular-eslint/eslint-plugin-template": "^13.0.1",
    "@angular-eslint/template-parser": "^13.0.1",
    "@types/eslint": "^8.4.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.14",
    "@types/prettier": "^2.4.3",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "typescript-language-server": "^0.9.6",
    "vscode-langservers-extracted": "^4.0.0"
  }
}
