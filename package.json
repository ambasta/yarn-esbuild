{
  "name": "@ambasta/yarn-esbuild",
  "packageManager": "yarn@3.2.0-rc.13",
  "version": "1.0.0",
  "description": "wrapper for esbuild to provide yarn plugins via cli",
  "author": "Amit Prakash Ambasta @ambasta",
  "bin": "./bin/run",
  "homepage": "https://github.com/ambasta/yarn-esbuild",
  "bugs": "https://github.com/ambasta/yarn-esbuild/issues",
  "licence": "GPL-3.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "ambasta/yarn-esbuild",
  "exports": {
    "./*": "./dist/*"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ]
    }
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
    "build": "yarn clean && tsc -b",
    "watch": "yarn clean && tsc --watch",
    "lint": "yarn eslint .",
    "invoke": "yarn build && node dist/bin/run.js",
    "postpack": "rimraf oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "dependencies": {
    "@oclif/core": "^1.3.0",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.0.1",
    "@oclif/plugin-version": "^1.0.4",
    "@yarnpkg/esbuild-plugin-pnp": "^2",
    "esbuild": "^0.14.18",
    "pino": "^7.6.5"
  },
  "devDependencies": {
    "@oclif/test": "^2",
    "@types/eslint": "^8.4.1",
    "@types/node": "^17.0.14",
    "@types/prettier": "^2.4.3",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "chai": "^4.3.6",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unicorn": "^40.1.0",
    "globby": "^13.1.1",
    "mocha": "^9.2.0",
    "oclif": "^2",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5",
    "typescript-language-server": "^0.9.6",
    "vscode-langservers-extracted": "^4.0.0"
  },
  "oclif": {
    "bin": "yarn-esbuild",
    "dirname": "yarn-esbuild",
    "commands": "./dist/commands",
    "additionalHelpFlags": [
      "-h"
    ],
    "additionalVersionFlags": [
      "-v"
    ],
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins",
      "@oclif/plugin-version"
    ],
    "topicSeparator": " ",
    "topics": {
      "build": {
        "description": "Build and optimize your JavaScript code"
      }
    }
  }
}
